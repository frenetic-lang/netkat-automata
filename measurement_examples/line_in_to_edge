((s = 1; p = 1) + (s = 2; p = 2));               (* in *)

(((t = 1; p := 1) + (t = 2; p := 2));            (* (pt)* *)
((s = 1; p = 1) + (s = 2; p = 2) +
(s = 1; p = 2; s := 2; p := 1) +
(s = 2; p = 1; s := 1; p := 2)))*;

((t = 1; p := 1) + (t = 2; p := 2));             (* p *)

((s = 1; p = 2) + (s = 2; p = 1))                (* edge *)
